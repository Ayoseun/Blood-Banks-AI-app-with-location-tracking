<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.data.loginFragment">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/study2"
                    android:layout_width="312dp"
                    android:layout_height="225dp"
                    android:layout_marginTop="60dp"
                    android:foregroundGravity="center"
                    android:paddingEnd="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/sizee"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.494"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="96dp"
                    android:background="@drawable/shape4"
                    android:textColor="@color/textBlack2"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10dp"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:hint="Email"
                    android:textColorHint="#BEC0CA"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/study2" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="35dp"

                    android:layout_marginTop="45dp"
                    android:background="@drawable/shape4"
                    android:drawableStart="@drawable/ic_baseline_vpn_key_24"

                    android:drawableEnd="@drawable/ic_baseline_remove_red_eye_242"
                    android:drawablePadding="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/textBlack2"
                    android:hint="Password"
                    android:textColorHint="#BEC0CA"
                    app:layout_constraintEnd_toEndOf="@+id/editText2"
                    app:layout_constraintStart_toStartOf="@+id/editText2"
                    app:layout_constraintTop_toBottomOf="@+id/editText2" />

                <TextView

                    android:id="@+id/textView55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:shadowColor="#43616161"
                    android:shadowDx="3"

                    android:shadowDy="3"
                    android:shadowRadius="7"
                    android:text="Remember me"
                    android:textAlignment="center"
                    android:textColor="@color/textBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/checkBox"
                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                    app:layout_constraintTop_toTopOf="@+id/checkBox" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="4dp"
                    android:padding="0dp"
                    app:layout_constraintStart_toStartOf="@+id/editText3"
                    app:layout_constraintTop_toBottomOf="@+id/editText3" />

                <TextView

                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:shadowColor="#43616161"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="7"
                    android:text="Forgot Password?"

                    android:textAlignment="center"
                    android:textColor="@color/textBlack"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/editText3"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/editText3"
                    app:layout_constraintTop_toBottomOf="@+id/editText3" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="65dp"
                    android:layout_marginTop="84dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/shape5"
                    android:padding="1dp"
                    android:text="LOG IN"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/editText3"
                    app:layout_constraintStart_toStartOf="@+id/editText3"
                    app:layout_constraintTop_toBottomOf="@+id/editText3" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>